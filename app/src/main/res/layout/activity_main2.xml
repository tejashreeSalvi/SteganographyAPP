<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <Button
        android:id="@+id/linkqrcodegen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="74dp"
        android:background="@drawable/custom_button"
        android:padding="10dp"
        android:text="Qrcode Video Link"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/linkqrcodescan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="155dp"
        android:background="@drawable/custom_button"
        android:padding="10dp"
        android:text="Scan Qrcode video link"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/linkencode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:background="@drawable/custom_button"
        android:text="Encode Video Link"

        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/linkdecode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linkencode"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="-108dp"
        android:background="@drawable/custom_button"
        android:padding="10dp"
        android:text="Decode Video Link"
        android:textColor="#FFFFFF" />

</RelativeLayout>